<Window
    x:Class="BTNET.VM.Views.LoadingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Loading"
    ShowInTaskbar="False"
    Width="160"
    Height="50"
    MinWidth="160"
    MinHeight="50"
    ResizeMode="NoResize"
    WindowStyle="None"
    BorderBrush="Transparent"
    UseLayoutRounding="True"
    BorderThickness="0"
    Background="Transparent"
    Topmost="True"
    WindowStartupLocation="CenterScreen" 
    IsHitTestVisible="False">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CornerRadius="16"
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="0"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border 
        CornerRadius="16" 
        Background="Black" 
        BorderBrush="Transparent">
        <Grid>
            <StackPanel>
                <TextBlock
                    Margin="0,8,0,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White">
                    LOADING PLEASE WAIT
                </TextBlock>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="AntiqueWhite"
                    Text="Checking Keys.." />
            </StackPanel>
        </Grid>
    </Border>
</Window>
